{% extends 'base.html.twig' %}

{% block body %}
    <h1>Review</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.note }}</td>
            </tr>
            <tr>
                <th>Date publication</th>
                <td>{{ review.publicationDate|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Review Author</th>
                <td>{{ review.reviewAuthor }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ review.text }}</td>
            </tr>
            <tr>
                <th>User Rated</th>
                <td>{{ review.userRated }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
